<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<appSettings>
		<add key="logFile" value="log.txt"/>
		<add key="validDataFile" value="measurements_session.csv"/>
		<add key="invalidDataFile" value="rejects.csv"/>
	</appSettings>

	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="NetTcpBindingConfig"
						 transferMode="Streamed"
						 maxReceivedMessageSize="65536"
						 openTimeout="00:05:00"
						 closeTimeout="00:05:00"
						 sendTimeout="00:10:00"
						 receiveTimeout="00:10:00">
					<readerQuotas maxDepth="32"
								  maxStringContentLength="8192"
								  maxArrayLength="16384"
								  maxBytesPerRead="4096"
								  maxNameTableCharCount="16384" />
				</binding>
			</netTcpBinding>
		</bindings>

		<services>
			<service name="Service.SensorService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4002" />
					</baseAddresses>
				</host>
				<endpoint
					address="ServiceSensor"
					binding="netTcpBinding"
					bindingConfiguration="NetTcpBindingConfig"
					contract="Common.ISensorService" />
			</service>

		</services>
	</system.serviceModel>
</configuration>